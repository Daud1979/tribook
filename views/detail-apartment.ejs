<%- include('./partials/head') %>
  <div class="w3-content w3-border-left w3-border-right"> 
  <!-- Sidebar/menu -->
    <nav class="w3-sidebar w3-light-grey w3-collapse " style="z-index:3;width:260px" id="mySidebar">
  <div class="w3-container w3-display-container w3-padding-16">
    <i onclick="w3_close()" class="fa fa-remove w3-hide-large w3-button w3-transparent w3-display-topright"></i>
    <h3>Alquiler</h3>
    <h4 style="color: rgb(190, 182, 182); text-decoration:line-through; font-style: italic;"> antes <%= selectedApartment.price %> €</h4>
    <h3>ahora <%= selectedApartment.price* 0.9 %> €</h3>
    <h6>por noche</h6>
    <% if (isAdmin) { %>
      <a class="w3-button  w3-black w3-margin-bottom" href="/apartment/<%= selectedApartment._id %>/edit">Editar Apartamento</a>
      <input type="hidden" value="<%=selectedApartment.estado%>" name="estado" id="estado">
      <% if (selectedApartment.estado==1) { %>
        <a class="w3-button  w3-red w3-margin-bottom" href="/apartment/<%= selectedApartment._id %>/estado">Deshabilitar </a>
      <% } else { %>
        <a class="w3-button  w3-red w3-margin-bottom" href="/apartment/<%= selectedApartment._id %>estado">Habilitar </a>
      <% } %>
    <% } else { %>
        <a class="w3-button  w3-black w3-margin-bottom" href="/apartment/<%= selectedApartment._id %>">Reservar Apartamento</a>
    <% } %>

  </div>

    </nav>

  <!-- !PAGE CONTENT! -->
      <div class="w3-main w3-white" style="margin-left:260px">
  <!-- Push down content on small screens -->
        <div class="w3-hide-large" style="margin-top:80px"></div>
  <!-- Slideshow Header -->
        <div class="w3-container" id="apartment">
          <h2 class="w3-text-green"><%= selectedApartment.title %></h2>
          <div class="w3-display-container mySlides">
            <img src="<%= selectedApartment.mainPhoto %>" style="width:100%;margin-bottom:-6px">
            <div class="d-flex align-items-center justify-content-center bg-dark text-white p-1" style="height:50px;">
              <p class="p-0 m-0"><%= selectedApartment.descriptionmainPhoto %></p>
            </div>
          </div>
          <div class="w3-display-container mySlides">
            <img src="<%= selectedApartment.photo1 %>" style="width:100%;margin-bottom:-6px">
            <div class="d-flex align-items-center justify-content-center bg-dark text-white p-1" style="height:50px;">
              <p class="p-0 m-0"><%= selectedApartment.descriptionphoto1 %></p>
            </div>
          </div>
          <div class="w3-display-container mySlides">
            <img src="<%= selectedApartment.photo2 %>" style="width:100%;margin-bottom:-6px">
            <div class="d-flex align-items-center justify-content-center bg-dark text-white p-1" style="height:50px;">
              <p class="p-0 m-0"><%= selectedApartment.descriptionphoto2 %></p>
            </div>
          </div>
          <div class="w3-display-container mySlides">
            <img src="<%= selectedApartment.photo3 %>" style="width:100%;margin-bottom:-6px">
            <div class="d-flex align-items-center justify-content-center bg-dark text-white p-1" style="height:50px;">
              <p class="p-0 m-0"><%= selectedApartment.descriptionphoto3 %></p>
            </div>
          </div>
        </div>
        <div class="w3-row-padding w3-section">
          <div class="w3-col s3">
            <img class="demo w3-opacity w3-hover-opacity-off" src="<%= selectedApartment.mainPhoto %>" style="height: 130px; width:100%;cursor:pointer" onclick="currentDiv(1)" title="Living room">
          </div>
          <div class="w3-col s3">
            <img class="demo w3-opacity w3-hover-opacity-off" src="<%= selectedApartment.photo1 %>" style="height: 130px; width:100%;cursor:pointer" onclick="currentDiv(2)" title="Dining room">
          </div>
          <div class="w3-col s3">
            <img class="demo w3-opacity w3-hover-opacity-off" src="<%= selectedApartment.photo2 %>" style="height: 130px; width:100%;cursor:pointer" onclick="currentDiv(3)" title="Bedroom">
          </div>
          <div class="w3-col s3">
            <img class="demo w3-opacity w3-hover-opacity-off" src="<%= selectedApartment.photo3 %>" style="height: 130px; width:100%;cursor:pointer" onclick="currentDiv(4)" title="Second Living Room">
          </div>
        </div>

      <div class="w3-container">
        <h4><strong>Descripcion del Apartamento</strong></h4>
        <div class="w3-row w3-large">
          <%= selectedApartment.description %>
        </div>
        <br>
        <h4><strong>Reglas del Apartamento</strong></h4>
        <div class="w3-row w3-large">
          <%= selectedApartment.normas %>
        </div>
        <br>
        <h4><strong>Espacio</strong></h4>
        <div class="w3-row w3-large">
          <div class="w3-col s6">
            <p><i class="fa fa-fw fa-male"></i> Max. Persona:  <%= selectedApartment.nPerson %></p>
            <p><i class="fa fa-fw fa-bath"></i> Habitaciones:  <%= selectedApartment.nHab %></p>
            <p><i class="fa fa-fw fa-bed"></i> Camas dobles:  <%= selectedApartment.nBedDouble %></p>
            
          </div>
          <div class="w3-col s6">
            <p><i class="fa fa-fw fa-bed"></i> Camas simples:  <%= selectedApartment.nBedSimple %></p>
            <p><i class="fa fa-fw fa-bed"></i> Baños:  <%= selectedApartment.nBat %></p>
            <p><i class="fa fa-fw fa-bed"></i> Tamaño m<sup>2</sup>:  <%= selectedApartment.size %></p>
          
          </div>
        </div>    
        <br>
        <h4><strong>Comodidades</strong></h4>
        <div class="w3-row w3-large">
          <div class="w3-col s6">
            <p>
            <% if (selectedApartment.services.wifi === true) { %>
              <span class="material-symbols-outlined">
                wifi
                </span>
                WI-FI
            <% } %>
            </p>
            <p>
            <% if (selectedApartment.services.tv === true) { %>
              <span class="material-symbols-outlined">
                tv
                </span>
                Tv Cable
            <% } %>
            </p>
            <p>
            <% if (selectedApartment.services.airConditioner === true) { %>
              <span class="material-symbols-outlined">
                mode_fan
                </span>
                Aire Acondicionado
            <% } %>
            </p>
            <p>
            <% if (selectedApartment.services.kitchen === true) { %>
              <span class="material-symbols-outlined">
                kitchen
                </span>
                Cocina moderna
            <% } %>
            </p>
         
          </div>
          <div class="w3-col s6">
            <p>
            <% if (selectedApartment.services.disability === true) { %>
              <span class="material-symbols-outlined">
                blind
                </span>
                Servicios para Discapacitado
            <% } %>
            </p>
            <p>
            <% if (selectedApartment.services.heater === true) { %>
              <span class="material-symbols-outlined">
                heat
                </span>
                Calefaccion
            <% } %>
            </p>
            <p>
            <% if (selectedApartment.services.parking === true) { %>
              <span class="material-symbols-outlined">
                local_parking
                </span>
                Estacionamiento de Coche
            <% } %>
            </p>
            <p>
            <% if (selectedApartment.services.pet === true) { %>
              <span class="material-symbols-outlined">
                pets
                </span>
                Mascotas
            <% } %>
          </p>
          </div>
        </div>
        <br>
        <h4><strong>Google Maps</strong></h4>
        <div class="w3-row w3-large">
            <%- selectedApartment.location.googlemap %>
          
        </div>
      </div>
    </div>
  </div>


 <script>
// Script to open and close sidebar when on tablets and phones
function w3_open() {
  document.getElementById("mySidebar").style.display = "block";
  document.getElementById("myOverlay").style.display = "block";
}
 
function w3_close() {
  document.getElementById("mySidebar").style.display = "none";
  document.getElementById("myOverlay").style.display = "none";
}

// Slideshow Apartment Images
var slideIndex = 1;
showDivs(slideIndex);

function plusDivs(n) {
  showDivs(slideIndex += n);
}

function currentDiv(n) {
  showDivs(slideIndex = n);
}

function showDivs(n) {
  var i;
  var x = document.getElementsByClassName("mySlides");
  var dots = document.getElementsByClassName("demo");
  if (n > x.length) {slideIndex = 1}
  if (n < 1) {slideIndex = x.length}
  for (i = 0; i < x.length; i++) {
    x[i].style.display = "none";
  }
  for (i = 0; i < dots.length; i++) {
    dots[i].className = dots[i].className.replace(" w3-opacity-off", "");
  }
  x[slideIndex-1].style.display = "block";
  dots[slideIndex-1].className += " w3-opacity-off";
}
</script>
</body>
</html>